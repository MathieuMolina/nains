{% extends 'base.html.twig' %}

{% block title %}Topic index{% endblock %}

{% block body %}
    <h1>Topic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Topic_title</th>
                <th>Topic_creator</th>
                <th>Topic_last_user</th>
                <th>Topic_date</th>
                <th>Topic_reply_date</th>
                <th>Topic_views</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.topicTitle }}</td>
                <td>{{ topic.topicCreator }}</td>
                <td>{{ topic.topicLastUser }}</td>
                <td>{{ topic.topicDate ? topic.topicDate|date('Y-m-d') : '' }}</td>
                <td>{{ topic.topicReplyDate ? topic.topicReplyDate|date('Y-m-d') : '' }}</td>
                <td>{{ topic.topicViews }}</td>
                <td>
                    <a href="{{ path('app_topic_show', {'id': topic.id}) }}">show</a>
                    <a href="{{ path('app_topic_edit', {'id': topic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_topic_new') }}">Créer un nouveau topic</a>
    <br><br>
    <button class="btn btn-lg btn-primary" onclick="window.location.href = '/centre';">Retour au menu</button>
    <br><br>
    <button class="btn btn-lg btn-primary" onclick="window.location.href = '/logout';">Déconnexion</button>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Topic
{% endblock %}


{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="container">
		<div class="card">
			<div class="card-header">
				<h3>Topic:
					{{ topic.Title }}</h3>
			</div>
			<div class="card-body">
				<p class="card-text">{{ topic.message }}</p>
			</div>
			<div class="card-footer text-muted">
				Topic crée par
				{{ topic.user.username }}
				le
				{{ topic.CreatedAt|date('d-F-Y à H:i:s', 'Europe/Paris') }}
			</div>
		</div>


	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3>Réponses :</h3>
				<ul class="list-group">
					{% for msg in topic.messages %}
						<li class="list-group-item {% if loop.first %}rounded-0{% endif %} {% if loop.last %}rounded-bottom{% endif %}">
							{{msg.content}}
							<div class="card-footer text-muted">
								Répondu par
								{{ topic.user.username }}
								le
								{{ topic.CreatedAt|date('d-F-Y à H:i:s', 'Europe/Paris') }}
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<footer class="fixed-bottom bg-light">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6">
					{{ form_start(form) }}
					<div class="form-group">
						{{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre réponse', 'value': ''}}) }}
					</div>
					<button type="submit" class="btn btn-primary">Envoyer</button>
					{{ form_end(form) }}
					<div class="mt-4">
						<a href="{{ path('app_forum') }}" class="btn btn-secondary">Retour au forum</a>
					</div>
				</div>
			</div>
		</div>

	</footer>
{% endblock %}

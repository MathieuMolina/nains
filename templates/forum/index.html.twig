{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <section class="container">

        <div class="example-wrapper">
            <h1>Bienvenue {{ app.user.username }}, dans le Forum !</h1>

            <a href="{{ path('app_topic_new') }}">Créer un nouveau Topic</a>

            <br><br>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
{#                        <th>Date Dernier message</th>#}
                        <th>Date de création</th>
                        <th>Date dernière réponse</th>
                        <th>Nombre de vue</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for topic in topics %}
                        <tr>
{#                            <td>{{ topic.Title }}</td>#}

                            <td> <a href="{{ path('app_topic_show', {id: topic.id}) }}">{{ topic.Title }}</a></td>

                            <td>{{ topic.User.username}}</td>
{#                            <td>{{ topic.LastUser }}</td>#}
                            <td>{{ topic.CreatedAt|date('d-M-Y') }}</td>
{#                            <td>{{ topic.ReplyDate ? topic.ReplyDate|date('d-M-Y') : '' }}</td>#}
                            <td>{{ topic.Views }}</td>
                            <td>
{#                                <a href="{{ path('app_topic_show', {'id': topic.id}) }}">show</a>#}
{#                                <a href="{{ path('app_topic_edit', {'id': topic.id}) }}">edit</a>#}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            <br><br>
            <a href="{{ path('app_centre') }}">Menu</a>
            <br><br>
            <a href="{{ path('app_logout') }}">Déconnexion</a>

        </div>
    </section>
{% endblock %}
